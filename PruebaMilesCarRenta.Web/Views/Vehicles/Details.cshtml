@model PruebaMilesCarRenta.Shared.Entities.Vehicle

@{
	ViewData["Title"] = "Details";
}

<div class="row">
	<div class="col-md-10 offset-1">
		<h1 style="font-size: calc(1rem + 1.5vw);">Detalles Vehiculo</h1>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.NumberPlate)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.NumberPlate)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Brand)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Brand)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Model)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Model)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Year)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Year)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.CylinderCapacity)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.CylinderCapacity)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Price)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Price)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.NameImage)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.NameImage)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Available)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Available)
			</dd>
		</dl>
	</div>
	<a asp-controller="Home" asp-action="Index" class="btn btn-primary  col-md-2 offset-4">Atras</a>
	<a class="btn btn-secondary col-md-2" asp-controller="Bookings" asp-action="Create" asp-route-vehicleID="@Model?.Id">Reservar</a>


</div>
